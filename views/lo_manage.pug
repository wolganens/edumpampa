extends layout

block content
	h3
		| Gerenciar Objetos de Aprendizagem
	table.table
		thead
			th
				| Objeto
			th
				| Situação
			th
				| Ações
		tbody
			each lo in data
				tr
					td
						| !{lo.title}				
					td
						| !{lo.htmlSituation}
					td
						.btn-group
							a.btn.btn-default(href="/learning-object/remove/" + lo._id)
								| Apagar
							if !lo.approved
								a.btn.btn-success(href="/learning-object/approve/"+lo._id)
									| Aprovar
							else
								a.btn.btn-danger(href="/learning-object/approve/"+lo._id)
									| Desaprovar

